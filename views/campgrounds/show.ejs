<% layout("layout/boilerplate")%>
    <h1><%= campground.title %></h1>
    <h2><%= campground.location %></h2>
    <img src="<%=campground.image%>" alt="A Picture of the great outdoors">
    <p><%=campground.description%></p>

    <p><a href="/campgrounds/<%=campground._id%>/edit">Edit Camp</a></p>
    <form action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST">
        <button>Remove Camp</button>
    </form>

    <a href="/campgrounds">All Camps</a>
